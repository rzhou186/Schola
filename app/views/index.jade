  body

    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      div.container
        div.navbar-header
          a.navbar-brand(href='') Schola
          button.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.collapse.navbar-collapse
          div.nav.navbar-nav.navbar-right
            li
              a(href='#') Logout 
                span.glyphicon.glyphicon-chevron-right
          form.navbar-form.navbar-right(role='search').hidden
            div.form-group
              input.form-control(type='text', placeholder='Username')
            div.form-group
              input.form-control(type='password', placeholder='Password')
            button.btn.btn-schola.btn-sm(type='submit') Log In
            button.btn.btn-schola.btn-sm(type='submit') Sign Up

